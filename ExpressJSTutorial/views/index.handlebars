<h1 class="text-center mb-4">{{title}}</h1>
<form action="/api/members" class="border p-3 mb-4" method="POST">
  <h4 class="m-3">Add Member</h4>
  <div class="form-group m-3">
    <label for="name">Name</label>
    <input type="text" name="name" class="form-control">
  </div>
  <div class="form-group m-3">
    <label for="email">Email</label>
    <input type="email" name="email" class="form-control">
  </div>
  <input type="submit" value="Add Member" class="btn btn-primary btn-block m-3">
</form>

<div class="border p-3">
  <h4 class="m-3">Members</h4>
  <ul class="list-group m-3">
    {{#each members}}
      <li class="list-group-item p-3 bg-dark text-light border-light">{{this.name}}: {{this.email}}</li>
    {{/each}}
  </ul>
</div>

<a href="/api/members" class="btn btn-secondary mt-4">View Members API</a>